{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", // remove .exe for linux otherwise it will not work (idk why they match to the label name)
            "command": "nvcc",
            "args": [
                "-o",
                "${fileBasenameNoExtension}",
                "${file}",
                "-ccbin", // WINDOWS
                "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Tools\\MSVC\\14.36.32532\\bin\\Hostx64\\x64" // WINDOWS, USER SPECIFIC, SHOULD BE PATH TO CL.EXE
